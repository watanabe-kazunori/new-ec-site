          </tr>

          <tr>
              <th>ベンダー名</th>
              <td>        
                <select name = "example">
                  <option value =""></option> 
                </select></td>
          </tr>
          
          <tr>
              <th>製品名</th>
              <td><%= text_field 'serial_m','SKU' %></td>
          </tr>

          <tr>
              <th>製品番号(SKU)</th>
              <td>          
                <select name = "example">
                  <option value =""></option>
