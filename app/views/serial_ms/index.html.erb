      <table class="button-center">
        <tr>
            <td class="button"><%= submit_tag("検索") %></td>    
        </tr>

      </table>
        <div class="border"></div>

        <h1>シリアル検索　結果一覧</h1>

        <table class="result-center" frame="border">
          <tr>
            <th style="text-align: left">検索該当件数</th>
            <td align="right"><%= label 'prd_m','123456789' %>件</td>
          </tr>  
        </table>
        <table class="button-center">
          <tr>
            <td class="button"　><%= submit_tag("前へ") %></td>
            <td class="button"><%= submit_tag("次へ") %></td>
          </tr>
        </table>
      <table class="result-table" border=1>
        <thead>
          <tr>  
            <th><%= check_box 'prd_m','chkflg' %></th>
            <th style="width: 20px">　　　　</th>
            <th>シリアル種別</th>
            <th>ベンダー名</th>
            <th>製品番号(SKU)</th>
            <th>製品名</th>
            <th>シリアル1</th>
            <th>シリアル2</th>
            <th>販売日</th>
            <th>委託日</th>
            <th>注文番号</th>
            <th>顧客名</th>
            <th>シリアル状態<br>(発行済/未発行/引当)</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <tbody>
        <% @serial_ms.each do |serial_m| %>          
          <tr>
            <td><%= check_box 'prd_m','chkflg' %></td>
            <td><%= link_to '詳細', serial_m %></td>
