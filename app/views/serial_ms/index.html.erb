          </tr>

          <tr>
              <th>シリアル</th>
              <td><%= text_field 'serial_m','SKU' %></td>   
          </tr>

          <tr>
              <th>販売日</th>
              <td><%= datetime_select 'serial_m','SKU' %></td>
          </tr>

          <tr>
              <th>委託日</th>
              <td><%= datetime_select 'serial_m','SKU' %></td>
          </tr>

              <tr>
              <th>注文番号</th>
              <td><%= text_field 'serial_m','SKU' %></td>
          </tr>

              <tr>
              <th>顧客名</th>
              <td><%= text_field 'serial_m','SKU' %></td>
          </tr>
